<odoo>
  <data>
    <!-- explicit list view definition -->
    
    <record model="ir.ui.view" id="clientes.list">
      <field name="name">clientes list</field>
      <field name="model">clientes.clientes</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="id_card"/>
          <field name="birthyear"/>
          <field name="phone"/>
          <field name="email"/>
          <field name="address"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="clientes.form">
      <field name="name">clientes form</field>
      <field name="model">clientes.clientes</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="name"/>
              <field name="id_card"/>
              <field name="birthyear"/>
              <field name="phone"/>
              <field name="email"/>
              <field name="address"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>   

    <!-- actions opening views on models -->
    
    <record model="ir.actions.act_window" id="clientes.action_window">
      <field name="name">clientes window</field>
      <field name="res_model">clientes.clientes</field>
      <field name="view_mode">tree,form</field>
    </record>
   

    <!-- server action to the one above -->
