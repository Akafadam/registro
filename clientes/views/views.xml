    <!-- Top menu item -->
    
    <menuitem name="clientes" id="clientes.menu_root"/>
   
    <!-- menu categories -->
    
    <menuitem name="Menu 1" id="clientes.menu_1" parent="clientes.menu_root" action="clientes.action_window"/>
