<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>


     <report id="pacientes.report"

     string="Reporte de Pacientes"
     model="pacientes.pacientes"
     report_type="qweb-pdf"
     name="pacientes.report"
     menu="True"
     print_report_name="'External Report %s %s pacientes'"
     
     />


     <template id="report">

     <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
            <t t-call="web.external_layout">
                <div class="page" style="font-size:18px">
                        <div class="row">
                            <div class="col-md-12" aling="center">
                                <h2>Reporte de Pacientes</h2>
                                <h4>Zona Medica</h4>
                                <h5>Registros</h5>                       
                            </div>
                        </div>
                        <div class="row mt8">
                            <div class="col-md-12">
                                Nombre: <span t-field="o.name"/>                     
                            </div>                   
                        </div>
                        <div class="row mt8">
                            <div class="col-md-12">
                                Cedula: <span t-field="o.id_card"/>                     
                            </div>                   
                        </div>
                        <div class="row mt8">
                            <div class="col-md-12">
                                Fecha de Nacimiento: <span t-field="o.birthyear"/>                     
                            </div>                   
                        </div>
                        <div class="row mt8">
                            <div class="col-md-12">
                                Numero Telefonico: <span t-field="o.phone"/>                     
                            </div>                   
                        </div>
                        <div class="row mt8">
                            <div class="col-md-12">
                                Correo Electronico: <span t-field="o.email"/>                     
                            </div>                   
                        </div>
                        <div class="row mt8">
                            <div class="col-md-12">
                                Direccion de Domicilio: <span t-field="o.address"/>                     
                            </div>                   
                        </div>
                </div>
            </t>
        </t>
     </t>


     </template>


    </data>
</odoo>