<odoo>
  <data>
    <!-- explicit list view definition -->
    
    <record model="ir.ui.view" id="pacientes.list">
      <field name="name">pacientes list</field>
      <field name="model">pacientes.pacientes</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="id_card"/>
          <field name="birthyear"/>
          <field name="phone"/>
          <field name="email"/>
          <field name="address"/>
        </tree>
      </field>
    </record>
   

    <!-- actions opening views on models -->
    
    <record model="ir.actions.act_window" id="pacientes.action_window">
      <field name="name">pacientes window</field>
      <field name="res_model">pacientes.pacientes</field>
      <field name="view_mode">tree,form</field>
    </record>
   

