    <!-- Top menu item -->
    
    <menuitem name="empleados" id="empleados.menu_root"/>
   
    <!-- menu categories -->
    
    <menuitem name="Personal MÃ©dico" id="empleados.menu_1" parent="empleados.menu_root" action="empleados.action_medico"/>
    
    <menuitem name="Personal de Servicio" id="empleados.menu_2" parent="empleados.menu_root" action="empleados.action_servicio"/>
    
    <menuitem name="Personal Administrativo" id="empleados.menu_3" parent="empleados.menu_root" action="empleados.action_administrativo"/>

