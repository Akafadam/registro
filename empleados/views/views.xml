<odoo>
  <data>
    <!-- explicit list view definition -->
    
    <record model="ir.ui.view" id="empleados.medicos">
      <field name="name">empleados list</field>
      <field name="model">empleados.empleados</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="id_card"/>
          <field name="birthyear"/>
          <field name="phone"/>
          <field name="email"/>
          <field name="address"/>
          <field name="schedule"/>
          <field name="speciality"/>
          <field name="worked"/>
          <field name="pay"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="empleados.servicio">
      <field name="name">empleados list</field>
      <field name="model">empleados.empleados</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="id_card"/>
          <field name="birthyear"/>
          <field name="phone"/>
          <field name="email"/>
          <field name="address"/>
          <field name="worked"/>
          <field name="pay"/>
        </tree>
      </field>
    </record>
   
   <record model="ir.ui.view" id="empleados.administrativo">
      <field name="name">empleados list</field>
      <field name="model">empleados.empleados</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="id_card"/>
          <field name="birthyear"/>
          <field name="phone"/>
          <field name="email"/>
          <field name="address"/>
          <field name="worked"/>
          <field name="pay"/>
        </tree>
      </field>
    </record>

    <!-- actions opening views on models -->
    
    <record model="ir.actions.act_window" id="empleados.action_medico">
      <field name="name">empleados window</field>
      <field name="res_model">empleados.empleados</field>
      <field name="view_id" ref="empleados.medicos"/>
      <field name="view_mode">tree,form</field>
    </record>
   
    <record model="ir.actions.act_window" id="empleados.action_servicio">
      <field name="view_id" ref="empleados.servicio"/>
      <field name="name">empleados window</field>
      <field name="res_model">empleados.empleados</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="empleados.action_administrativo">
      <field name="view_id" ref="empleados.administrativo"/>
      <field name="name">empleados window</field>
      <field name="res_model">empleados.empleados</field>
      <field name="view_mode">tree,form</field>
    </record>

