<odoo>
  <data>
    <!-- explicit list view definition -->
    
    <record model="ir.ui.view" id="empleados_personal">
      <field name="name">empleados list</field>
      <field name="model">empleados.empleados</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="id_card"/>
          <field name="birthyear"/>
          <field name="phone"/>
          <field name="charge"/>
          <field name="email"/>
          <field name="arrive_time"/>
          <field name="leave_time"/> 
          <field name="address"/>
          <field name="speciality"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="empleados_personal_form">
      <field name="name">empleados form</field>
      <field name="model">empleados.empleados</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <notebook>
              <page string="Personal Medico">
                <group>
                  <group>
                    <field name="name"/>
                    <field name="id_card"/>
                    <field name="birthyear"/>
                    <field name="phone"/>
                    <field name="charge"/>
                  </group>
                  <group>
                    <field name="email"/>
                    <field name="arrive_time"/>
                    <field name="leave_time"/>  
                    <field name="speciality"/>
                    <field name="address"/>
                  </group>
                </group>
              </page>
              <page string="Personal de Servicio">
                <group>
                  <group>
                    <field name="name"/>
                    <field name="id_card"/>
                    <field name="birthyear"/>
                    <field name="phone"/>
                  </group>
                  <group>
                    <field name="charge"/>
                    <field name="email"/>
                    <field name="address"/>
                  </group>
                </group>
              </page>
              <page string="Personal Administrativo">
                <group>
                  <group>
                    <field name="name"/>
                    <field name="id_card"/>
                    <field name="birthyear"/>
                    <field name="phone"/>
                  </group>
                  <group>
                    <field name="charge"/>
                    <field name="email"/>
                    <field name="address"/>
                  </group>
                </group>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="empleados_horario">
      <field name="name">empleados list</field>
      <field name="model">empleados.empleados</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="id_card"/>
          <field name="birthyear"/>
          <field name="charge"/>
          <field name="phone"/>
          <field name="email"/>
          <field name="address"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="empleados_horario_form">
      <field name="name">empleados form</field>
      <field name="model">empleados.empleados</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <group>
                <field name="name"/>
                <field name="id_card"/>
                <field name="birthyear"/>
                <field name="phone"/>
              </group>
              <group>
                <field name="charge"/>
                <field name="email"/>
                <field name="address"/>
              </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- actions opening views on models -->
    
    <record model="ir.actions.act_window" id="empleados.action_personal">
      <field name="name">empleados window</field>
      <field name="res_model">empleados.empleados</field>
      <field name="view_ids" eval="[(5, 0, 0), 
        (0, 0, {'view_mode': 'tree', 'view_id': ref('empleados_personal')}), 
        (0, 0, {'view_mode': 'form', 'view_id': ref('empleados_personal_form')}),                           
        (0, 0, {'view_mode': 'kanban'})]"/>
      <field name="view_mode">tree,form</field>
    </record>
   
    <record model="ir.actions.act_window" id="empleados.action_horario">
      <field name="view_ids" eval="[(5, 0, 0), 
        (0, 0, {'view_mode': 'tree', 'view_id': ref('empleados_horario')}), 
        (0, 0, {'view_mode': 'form', 'view_id': ref('empleados_horario_form')}),                           
        (0, 0, {'view_mode': 'kanban'})]"/>
      <field name="name">empleados window</field>
      <field name="res_model">empleados.empleados</field>
      <field name="view_mode">tree,form</field>
    </record>

