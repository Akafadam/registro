<odoo>
  <data>
    <!-- explicit list view definition -->
    
    <record model="ir.ui.view" id="empleados_medicos">
      <field name="name">empleados list</field>
      <field name="model">empleados.empleados</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="id_card"/>
          <field name="birthyear"/>
          <field name="phone"/>
          <field name="charge"/>
          <field name="email"/>
          <field name="arrive_time"/>
          <field name="leave_time"/> 
          <field name="address"/>
          <field name="speciality"/>
          <field name="worked"/>
          <field name="pay"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="empleados_medicos_form">
      <field name="name">empleados form</field>
      <field name="model">empleados.empleados</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="name"/>
              <field name="id_card"/>
              <field name="birthyear"/>
              <field name="phone"/>
              <field name="charge"/>
              <field name="email"/>
              <field name="arrive_time"/>
            </group>
            <group>
              <field name="leave_time"/>  
              <field name="speciality"/>
              <field name="address"/>
              <field name="worked"/>
              <field name="pay"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="empleados_servicio">
      <field name="name">empleados list</field>
      <field name="model">empleados.empleados</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="id_card"/>
          <field name="birthyear"/>
          <field name="charge"/>
          <field name="phone"/>
          <field name="email"/>
          <field name="address"/>
          <field name="worked"/>
          <field name="pay"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="empleados_servicio_form">
      <field name="name">empleados form</field>
      <field name="model">empleados.empleados</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group col="2">
              <field name="name"/>
              <field name="id_card"/>
              <field name="birthyear"/>
              <field name="phone"/>
              <field name="charge"/>
              <field name="email"/>
              <field name="address"/>
              <field name="worked"/>
              <field name="pay"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>
   
   <record model="ir.ui.view" id="empleados_administrativo">
      <field name="name">empleados list</field>
      <field name="model">empleados.empleados</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="id_card"/>
          <field name="birthyear"/>
          <field name="phone"/>
          <field name="charge"/>
          <field name="email"/>
          <field name="address"/>
          <field name="worked"/>
          <field name="pay"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="empleados_administrativo_form">
      <field name="name">empleados form</field>
      <field name="model">empleados.empleados</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group col="2">
              <field name="name"/>
              <field name="id_card"/>
              <field name="birthyear"/>
              <field name="charge"/>
              <field name="phone"/>
              <field name="email"/>
              <field name="address"/>
              <field name="worked"/>
              <field name="pay"/>
              <field name="arrive_time" attrs="{'invisible':[('state', 'in', ['service','admin'])]}"/>
              <field name="leave_time" attrs="{'invisible':[('state', 'in', ['service','admin'])]}"/>  
              <field name="speciality" attrs="{'invisible':[('state', 'in', ['service','admin'])]}"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- actions opening views on models -->
    
    <record model="ir.actions.act_window" id="empleados.action_medico">
      <field name="name">empleados window</field>
      <field name="res_model">empleados.empleados</field>
      <field name="view_ids" eval="[(5, 0, 0), 
        (0, 0, {'view_mode': 'tree', 'view_id': ref('empleados_medicos')}), 
        (0, 0, {'view_mode': 'form', 'view_id': ref('empleados_medicos_form')}),                           
        (0, 0, {'view_mode': 'kanban'})]"/>
      <field name="view_mode">tree,form</field>
    </record>
   
    <record model="ir.actions.act_window" id="empleados.action_servicio">
      <field name="view_ids" eval="[(5, 0, 0), 
        (0, 0, {'view_mode': 'tree', 'view_id': ref('empleados_servicio')}), 
        (0, 0, {'view_mode': 'form', 'view_id': ref('empleados_servicio_form')}),                           
        (0, 0, {'view_mode': 'kanban'})]"/>
      <field name="name">empleados window</field>
      <field name="res_model">empleados.empleados</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="empleados.action_administrativo">
      <field name="view_ids" eval="[(5, 0, 0), 
        (0, 0, {'view_mode': 'tree', 'view_id': ref('empleados_administrativo')}), 
        (0, 0, {'view_mode': 'form', 'view_id': ref('empleados_administrativo_form')}),                           
        (0, 0, {'view_mode': 'kanban'})]"/>
      <field name="name">empleados window</field>
      <field name="res_model">empleados.empleados</field>
      <field name="view_mode">tree,form</field>
    </record>

