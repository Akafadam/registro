<odoo>
  <record model="ir.ui.view" id="empleados_cargos">
      <field name="name">Lista de Cargos</field>
      <field name="model">cargos.cargos</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="subtype"/>
          <field name="is_medic"/>
          <field name="speciality"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="empleados_cargos_form">
      <field name="name">Formulario de Cargo</field>
      <field name="model">cargos.cargos</field>
      <field name="arch" type="xml">
        <form>
          <header>
            <field name="state" invisible="True"/>
            <button name="validate"
                    type="object"
                    states="draft"
                    string="Validar"
                    style="background:#7c7bad; color:white"
                    class="btn btn-primary"/>

            <!-- <button name="invalidate"
                    type="action"
                    attrs="{'invisible':[('state','in',['draft'])]}"
                    string="Invalidar"
                    style="background:#7c7bad; color:white"
                    class="btn btn-primary"/> -->

            <field name="state"
                   widget="statusbar"
                   default="draft"
                   statusbar_visible="draft,accepted"/>
          </header>
          <sheet>
            <group>
              <group>
                <field name="name"/>
                <field name="subtype"/>
                <field name="is_medic"/>
                <field name="speciality"/>
              </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record model="ir.actions.act_window" id="empleados.action_cargos">
      <field name="name">Cargos</field>
      <field name="res_model">cargos.cargos</field>
      <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Empleados" id="empleados.menu_root"/>

    <menuitem name="Cargos" id="empleados.menu_4" parent="empleados.menu_root" action="empleados.action_cargos"/>

</odoo>