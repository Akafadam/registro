<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>


     <report id="reporte_horario_custom"

     string="Reporte de Horario"
     model="empleados.horario"
     report_type="qweb-pdf"
     name="empleados.horario_report"
     menu="True"
     print_report_name="'Internal Report %s %s empleados'"
     
     />


     <template id="horario_report">
    <t t-call="web.internal_layout">
     <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
                <div class="page" style="font-size:18px">
                    <div class="row">
                        <div class="col-md-12" aling="center">
                            <h2>Reporte de horario</h2>
                            <h4>Zona Medica</h4>
                            <h5>Registros</h5>                       
                        </div>
                    </div>
                    <div class="row mt8" style="border: 1px solid black;position:relative">
                        <div class="col-md-12">
                            Hora de Entrada<span t-field="o.arrive_time" style="position:absolute;left:500px;border-left: 1px solid black;"/>                     
                        </div>                   
                    </div>
                    <div class="row mt8" style="border: 1px solid black;position:relative">
                        <div class="col-md-12">
                            Hora de Salida: <span t-field="o.leave_time" style="position:absolute;left:500px;border-left: 1px solid black;"/>                     
                        </div>                   
                    </div>
                </div>
            </t>
        </t>
     </t>
     </template>
    </data>
</odoo>