<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>


     <report id="reporte_empleados_custom"

     string="Reporte de Empleados"
     model="empleados.empleados"
     report_type="qweb-pdf"
     name="empleados.empleados_report"
     menu="True"
     print_report_name="'Internal Report %s %s empleados'"
     
     />


     <template id="empleados_report">
    <t t-call="web.internal_layout">
     <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
                <div class="page" style="font-size:18px">
                        <div class="row">
                            <div class="col-md-12" aling="center">
                                <h2>Reporte de Empleados</h2>
                                <h4>Zona Medica</h4>
                                <h5>Registros</h5>                       
                            </div>
                        </div>
                        <div class="row mt8">
                            <div class="col-md-12">
                                Nombre: <span t-field="o.name"/>                     
                            </div>                   
                        </div>
                        <div class="row mt8">
                            <div class="col-md-12">
                                Cedula: <span t-field="o.id_card"/>                     
                            </div>                   
                        </div>
                        <div class="row mt8">
                            <div class="col-md-12">
                                Fecha de Nacimiento: <span t-field="o.birthyear"/>                     
                            </div>                   
                        </div>
                        <div class="row mt8">
                            <div class="col-md-12">
                                Numero Telefonico: <span t-field="o.phone"/>                     
                            </div>                   
                        </div>
                        <div class="row mt8">
                            <div class="col-md-12">
                                Correo Electronico: <span t-field="o.email"/>                     
                            </div>                   
                        </div>
                        <div class="row mt8">
                            <div class="col-md-12">
                                Direccion de Domicilio: <span t-field="o.address"/>                     
                            </div>                   
                        </div>
                        <div class="row mt8">
                            <div class="col-md-12">
                                Cargo: <span t-field="o.charge"/>                     
                            </div>                   
                        </div>
                        <div class="row mt8">
                            <div class="col-md-12">
                                Especialidad: <span t-field="o.speciality"/>                     
                            </div>                   
                        </div>
                        <div class="row mt8">
                            <div class="col-md-12">
                                Horario: <span t-field="o.schedule"/>                     
                            </div>                   
                        </div>
                        <p style="page-break-after:always;"></p>
                </div>
            </t>
        </t>
     </t>
     </template>
    </data>
</odoo>