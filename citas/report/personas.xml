<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>


     <report id="citas.report"

     string="Reporte de Clientes y Pacientes"
     model="citas.personas"
     report_type="qweb-pdf"
     name="citas.personas_report"
     menu="True"
     print_report_name="'External Report %s %s citas'"
     
     />


     <template id="personas_report">

        <t t-call="web.external_layout">
        <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
                <div class="page" style="font-size:18px">
                        <div class="row">
                            <div class="col-md-12" aling="center">
                                <h2>Reporte de Citas</h2>
                                <h4>Zona Medica</h4>
                                <h5>Registros</h5>                       
                            </div>
                        </div>
                        <div class="row mt8" style="border: 1px solid black;position:relative">
                            <div class="col-md-12">
                                Nombre: <span t-field="o.name" style="position:absolute;left:500px;border-left: 1px solid black;"/>                     
                            </div>                   
                        </div>
                        <div class="row mt8" style="border: 1px solid black;position:relative">
                            <div class="col-md-12">
                                Cédula: <span t-field="o.id_card" style="position:absolute;left:500px;border-left: 1px solid black;"/>                     
                            </div>                   
                        </div>
                        <div class="row mt8" style="border: 1px solid black;position:relative">
                            <div class="col-md-12">
                                Fecha de nacimiento: <span t-field="o.birthyear" style="position:absolute;left:500px;border-left: 1px solid black;"/>                     
                            </div>                   
                        </div>
                        <div class="row mt8" style="border: 1px solid black;position:relative">
                            <div class="col-md-12">
                                Telefono: <span t-field="o.phone" style="position:absolute;left:500px;border-left: 1px solid black;"/>                     
                            </div>                   
                        </div>
                        <div class="row mt8" style="border: 1px solid black;position:relative">
                            <div class="col-md-12">
                                Correo: <span t-field="o.email" style="position:absolute;left:500px;border-left: 1px solid black;"/>                     
                            </div>                   
                        </div>
                        <div class="row mt8" style="border: 1px solid black;position:relative">
                            <div class="col-md-12">
                                Dirección: <span t-field="o.address" style="position:absolute;left:500px;border-left: 1px solid black;"/>                     
                            </div>                   
                        </div>
                        <p style="page-break-after:always;"></p>
                </div>
            </t>
        </t>
     </t>


     </template>


    </data>
</odoo>