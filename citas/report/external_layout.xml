<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>


     <report id="citas.report"

     string="Reporte de Citas"
     model="citas.citas"
     report_type="qweb-pdf"
     name="citas.report"
     menu="True"
     print_report_name="'External Report %s %s citas'"
     
     />


     <template id="report">

     <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
            <t t-call="web.external_layout">
                <div class="page" style="font-size:18px">
                        <div class="row">
                            <div class="col-md-12" aling="center">
                                <h2>Reporte de Citas</h2>
                                <h4>Zona Medica</h4>
                                <h5>Registros</h5>                       
                            </div>
                        </div>
                        <div class="row mt8">
                            <div class="col-md-12">
                                Datos del cliente: <span t-field="o.client_data"/>                     
                            </div>                   
                        </div>
                        <div class="row mt8">
                            <div class="col-md-12">
                                Datos del paciente: <span t-field="o.pacient_data"/>                     
                            </div>                   
                        </div>
                        <div class="row mt8">
                            <div class="col-md-12">
                                Fecha y Hora: <span t-field="o.date_time"/>                     
                            </div>                   
                        </div>
                        <div class="row mt8">
                            <div class="col-md-12">
                                Especialidad: <span t-field="o.speciality"/>                     
                            </div>                   
                        </div>
                        <div class="row mt8">
                            <div class="col-md-12">
                                Medico: <span t-field="o.medic_data"/>                     
                            </div>                   
                        </div>
                </div>
            </t>
        </t>
     </t>


     </template>


    </data>
</odoo>