<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>


     <report id="citas_report"

     string="Reporte de Citas"
     model="citas.citas"
     report_type="qweb-pdf"
     name="citas.citas_report"
     menu="True"
     print_report_name="'External Report %s %s citas'"
     
     />

     <template id="citas_report" name="Reportes de citas">
     <!-- <xpath expr="." position="inside">
        <link rel="stylesheet" href="citas/static/css/styles.css"/>
      </xpath> -->
     <t t-call="web.html_container">
     <t t-call="web.external_layout">
        <t t-foreach="docs" t-as="o">
                <div class="page" style="font-size:18px">
                        <div class="row">
                            <div class="col-md-12" aling="center">
                                <h2>Reporte de Citas</h2>
                                <h4>Zona Medica</h4>
                                <h5>Registros</h5>                       
                            </div>
                        </div>
                        <div class="row mt8" style="border: 1px solid black;position:relative">
                            <div class="col-md-12">
                                Datos del cliente: <span t-field="o.client_data" style="position:absolute;left:500px;border-left: 1px solid black;"/>                     
                            </div>                   
                        </div>
                        <div class="row mt8">
                            <div class="col-md-12" style="border: 1px solid black;position:relative">
                                Datos del paciente: <span t-field="o.pacient_data" style="position:absolute;left:500px;border-left: 1px solid black;"/>                     
                            </div>                   
                        </div>
                        <div class="row mt8" style="border: 1px solid black;position:relative">
                            <div class="col-md-12">
                                Fecha y Hora: <span t-field="o.date_time" style="position:absolute;left:500px;border-left: 1px solid black;"/>                     
                            </div>                   
                        </div>
                        <div class="row mt8">
                            <div class="col-md-12" style="border: 1px solid black;position:relative">
                                Especialidad: <span t-field="o.speciality" style="position:absolute;left:500px;border-left: 1px solid black;"/>                     
                            </div>                   
                        </div>
                        <div class="row mt8">
                            <div class="col-md-12" style="border: 1px solid black;position:relative">
                                Medico: <span t-field="o.medic_data" style="position:absolute;left:500px;border-left: 1px solid black;"/>                     
                            </div>                   
                        </div>
                </div>
            </t>
        </t>
     </t>


     </template>


    </data>
</odoo>