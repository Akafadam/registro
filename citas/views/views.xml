<odoo>
  <data>
    <!-- explicit list view definition -->
    
    <record model="ir.ui.view" id="citas.list">
      <field name="name">citas list</field>
      <field name="model">citas.citas</field>
      <field name="arch" type="xml">
        <tree>
          <field name="client_data"/>
          <field name="pacient_data"/>
          <field name="medic_data"/>
          <field name="speciality"/>
          <field name="date_time"/>
          <field name="time"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="citas.form">
      <field name="name">citas form</field>
      <field name="model">citas.citas</field>
      <field name="arch" type="xml">
        <form>
          <header>
            <field name="state" invisible="True"/>
            <button name="validate"
                    type="object"
                    states="draft"
                    string="Validar"
                    style="background:#7c7bad; color:white"
                    class="btn btn-primary"/>

            <button name="%(citas.dialog_action_window)d"
                    type="action"
                    string="Invalidar"
                    style="background:#7c7bad; color:white"
                    class="btn btn-primary"/>

            <field name="state"
                   widget="statusbar"
                   default="draft"
                   statusbar_visible="draft,accepted"/>
          </header>
          <sheet>
            <group col="4">
              <group colspan="3">
                <field name="client_data"/>
                <field name="pacient_data"/>
                <field name="medic_data"/>
                <field name="speciality"/>
                <field name="date_time"/>
                <field name="time"/>
              </group>
              <div attrs="{'invisible': [('client_data', '=', False)]}">
                <div style="display: flex;">
                  <label for="is_client"/>
                  <field name="is_client" />
                </div>
              </div>
            </group>
          </sheet>
        </form>
      </field>
    </record>
   

    <!-- actions opening views on models -->
    
    <record model="ir.actions.act_window" id="citas.action_window">
      <field name="name">citas window</field>
      <field name="res_model">citas.citas</field>
      <field name="view_mode">tree,form</field>
    </record>
   

    <!-- server action to the one above -->
    <!--
    <record model="ir.actions.server" id="citas.action_server">
      <field name="name">citas server</field>
      <field name="model_id" ref="model_citas_citas"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": self._name,
        }
      </field>
    </record>
    -->

    <!-- Top menu item -->
    
    <menuitem name="Citas" id="citas.menu_root"/>
   
    <!-- menu categories -->
    <menuitem name="Citas" id="citas.menu_1" parent="citas.menu_root" action="citas.action_window"/>
   
    <!-- actions -->
    <!--
    <menuitem name="List" id="citas.menu_1_list" parent="citas.menu_1"
