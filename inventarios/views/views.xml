<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="inventarios.list">
      <field name="name">inventarios list</field>
      <field name="model">inventarios.inventarios</field>
      <field name="arch" type="xml">
        <tree>
          <field name="product"/>
          <field name="reserve_type"/>
          <field name="cuantity"/>
          <field name="date"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="inventarios.form">
      <field name="name">inventarios form</field>
      <field name="model">inventarios.inventarios</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="product"/>
              <field name="reserve_type"/>
              <field name="cuantity"/>
              <field name="date"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>
   

    <!-- actions opening views on models -->
    
    <record model="ir.actions.act_window" id="inventarios.action_window">
      <field name="name">inventarios window</field>
      <field name="res_model">inventarios.inventarios</field>
      <field name="view_mode">tree,form</field>
    </record>
   

