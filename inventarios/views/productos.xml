<odoo>
  <data>
    <!-- explicit list view definition -->
    
    <record model="ir.ui.view" id="productos.list">
      <field name="name">Lista de Productos</field>
      <field name="model">productos.productos</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="code"/>
          <field name="cost"/>
          <field name="qr_code"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="productos.form">
      <field name="name">Formulario de Productos</field>
      <field name="model">productos.productos</field>
      <field name="arch" type="xml">
        <form>
          <header>
            <button name="get_random_string"
                    type="object"
                    string="Generar codigo"
                    style="background:#7c7bad; color:white"
                    class="btn btn-primary"/>
          </header>
          <sheet>
            <group>
              <field name="name"/>
              <field name="code"/>
              <field name="cost"/>
              <field name="qr_code" widget="image" class="oe_avatar"/>
            </group>
            
          </sheet>
        </form>
      </field>
    </record>
   

    <!-- actions opening views on models -->
    
    <record model="ir.actions.act_window" id="productos.action_window">
      <field name="name">Productos</field>
      <field name="res_model">productos.productos</field>
      <field name="view_mode">tree,form</field>
    </record>
   

    <!-- server action to the one above -->
