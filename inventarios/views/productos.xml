    <!-- Top menu item -->
    
    <menuitem name="Inventarios" id="inventarios.menu_root"/>
   
    <!-- menu categories -->
    
    <menuitem name="Productos" id="productos.menu_1" parent="inventarios.menu_root" action="productos.action_window"/>
