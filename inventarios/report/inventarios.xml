<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>


     <report id="reporte_inventarios_custom"

     string="Reporte de Inventarios"
     model="inventarios.inventarios"
     report_type="qweb-pdf"
     name="inventarios.reporte_inventarios"
     menu="True"
     print_report_name="'Internal Report %s %s inventarios'"
     
     />


     <template id="reporte_inventarios">

    <t t-call="web.internal_layout">
     <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
                <div class="page" style="font-size:18px">
                        <div class="row">
                            <div class="col-md-12" aling="center">
                                <h2>Reporte de Inventarios</h2>
                                <h4>Zona Medica</h4>
                                <h5>Registros</h5>                       
                            </div>
                        </div>
                        <div class="row mt8" style="border: 1px solid black;position:relative">
                            <div class="col-md-12">
                                Producto: <span t-field="o.product" style="position:absolute;left:500px;border-left: 1px solid black;"/>                     
                            </div>                   
                        </div>
                        <div class="row mt8" style="border: 1px solid black;position:relative">
                            <div class="col-md-12">
                                Tipo de reserva: <span t-field="o.reserve_type" style="position:absolute;left:500px;border-left: 1px solid black;"/>                     
                            </div>                   
                        </div>
                        <div class="row mt8" style="border: 1px solid black;position:relative">
                            <div class="col-md-12">
                                Cantidad: <span t-field="o.cuantity" style="position:absolute;left:500px;border-left: 1px solid black;"/>                     
                            </div>                   
                        </div>
                        <div class="row mt8" style="border: 1px solid black;position:relative">
                            <div class="col-md-12">
                                Fecha: <span t-field="o.date" style="position:absolute;left:500px;border-left: 1px solid black;"/>                     
                            </div>                   
                        </div>
                        <p style="page-break-after:always;"></p>
                </div>
            </t>
        </t>
     </t>


     </template>


    </data>
</odoo>