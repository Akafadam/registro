<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>


     <report id="reporte_productos_custom"

     string="Reporte de Productos"
     model="productos.productos"
     report_type="qweb-pdf"
     name="inventarios.reporte_productos"
     menu="True"
     print_report_name="'External Report %s %s productos'"
     
     />


     <template id="reporte_productos">

     <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
            <t t-call="web.external_layout">
                <div class="page" style="font-size:18px">
                        <div class="row">
                            <div class="col-md-12" aling="center">
                                <h2>Reporte de Productos</h2>
                                <h4>Zona Medica</h4>
                                <h5>Registros</h5>                       
                            </div>
                        </div>
                        <div class="row mt8">
                            <div class="col-md-12">
                                Nombre: <span t-field="o.name"/>                     
                            </div>                   
                        </div>
                        <div class="row mt8">
                            <div class="col-md-12">
                                Codigo: <span t-field="o.code"/>                     
                            </div>                   
                        </div>
                        <div class="row mt8">
                            <div class="col-md-12">
                                Costo: <span t-field="o.cost"/>                     
                            </div>                   
                        </div>
                        <div class="row mt8">
                            <div class="col-md-12">
                                Codigo QR: <img t-attf-src="data:image/jpg;base64,{{ o.qr_code }}" 
                                style="align:left; width:100px;height:100px;"/>
                            </div>                   
                        </div>
                </div>
            </t>
        </t>
     </t>


     </template>


    </data>
</odoo>