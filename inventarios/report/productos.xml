<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>


     <report id="reporte_productos_custom"

     string="Reporte de Productos"
     model="inventarios.productos"
     report_type="qweb-pdf"
     name="inventarios.reporte_productos"
     menu="True"
     print_report_name="'External Report %s %s productos'"
     
     />


     <template id="reporte_productos">

    <t t-call="web.external_layout">
     <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
                <div class="page" style="font-size:18px">
                        <div class="row">
                            <div class="col-md-12" aling="center">
                                <h2>Reporte de Productos</h2>
                                <h4>Zona Medica</h4>
                                <h5>Registros</h5>                       
                            </div>
                        </div>
                        <div class="row mt8" style="border: 1px solid black;position:relative">
                            <div class="col-md-12">
                                Nombre: <span t-field="o.name" style="position:absolute;left:500px;border-left: 1px solid black;"/>                     
                            </div>                   
                        </div>
                        <div class="row mt8" style="border: 1px solid black;position:relative">
                            <div class="col-md-12">
                                Codigo: <span t-field="o.code" style="position:absolute;left:500px;border-left: 1px solid black;"/>                     
                            </div>                   
                        </div>
                        <div class="row mt8" style="border: 1px solid black;position:relative">
                            <div class="col-md-12">
                                Costo: <span t-field="o.cost" style="position:absolute;left:500px;border-left: 1px solid black;"/>                     
                            </div>                   
                        </div>
                        <div class="row mt8">
                            <div class="col-md-12">
                                <img t-attf-src="data:image/jpg;base64,{{ o.qr_code }}" 
                                style="align:left; width:200px;height:200px;border: 1px solid red;"/>
                            </div>                   
                        </div>
                        <p style="page-break-after:always;"></p>
                </div>
            </t>
        </t>
     </t>


     </template>


    </data>
</odoo>